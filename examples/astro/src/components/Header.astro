---
/**
 * @component Header
 * Main application header with navigation
 * 
 * @actor User {Person} {in} Navigates through the application
 * @uses Navigation Displays navigation menu
 * @uses Logo Displays brand logo
 */

interface Props {
  title: string;
  logoUrl?: string;
}

const { title, logoUrl = '/logo.svg' } = Astro.props;
---

<header class="header">
  <div class="header-content">
    <img src={logoUrl} alt={title} class="logo" />
    <h1>{title}</h1>
  </div>
  <nav class="nav-menu">
    <slot />
  </nav>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background-color: #2c3e50;
    color: white;
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo {
    height: 40px;
    width: auto;
  }

  .nav-menu {
    display: flex;
    gap: 2rem;
  }
</style>
